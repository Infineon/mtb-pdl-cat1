    <ParamBool id="pdmUsed" name="pdmUsed" group="PDM Microphone Path" default="`${(source eq CY_ADCMIC_PDM) || pdmCfg}`" visible="`${debug}`" editable="false" desc="" />
    
    <ParamChoice id="sampleRate" name="Sample Rate" group="General" default="CY_ADCMIC_480KSPS" visible="true" editable="true" desc="Select the ADC sample rate" >
