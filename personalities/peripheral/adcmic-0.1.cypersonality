      <Entry name="0 - 1.8V" value="CY_ADCMIC_DC_RANGE_1_8V" visible="true" />
    </ParamChoice>
    
    <ParamBool id="tmrLatch" name="Result Latch on Timer" group="DC Measurement Path" default="false" visible="`${dcUsed}`" editable="true" desc="DC Result latching mode: checked - latch DC result on the Timer trigger, unchecked - latch continuously." />
    
    <ParamChoice id="micBias" name="Microphone Bias" group="Analog Microphone Path" default="CY_ADCMIC_BIAS_1_12_REF" visible="`${micUsed}`" editable="true" desc="Select the microphone bias" >
