    <ParamRange id="clockDiv" name="PDM Clock Divider" group="PDM Microphone Path" default="10" min="0" max="15" resolution="1" visible="`${pdmUsed}`" editable="true" desc="PDM clock divider (from clk_hf)" />
    <ParamBool id="clockInv" name="PDM Clock Inversion" group="PDM Microphone Path" default="false" visible="`${pdmUsed}`" editable="true" desc="PDM clock signal inversion (latch on negative edge)" />
    
    <ParamRange id="latchDelay" name="PDM Latch Delay" group="PDM Microphone Path" default="2" min="`${clockInv ? 3 : 2}`" max="`${clockInv ? 9 : 8}`" resolution="1" visible="`${pdmUsed}`" editable="true" desc="Number of clk_hf cycles from edge of pdm_clk to latch the pdm_data" />
    
    <ParamBool id="biquadEnable" name="Biquad Filter Enable" group="Audio Equalization" default="false" visible="`${micUsed || pdmUsed}`" editable="true" desc="Enable the biquad CIC filter" />

    <ParamRange id="full" name="Full Threshold" group="FIFO" default="7" min="0" max="63" resolution="1" visible="`${micUsed || pdmUsed}`" editable="true" desc="The programmable FIFO full threshold" />
    <ParamRange id="empty" name="Empty Threshold" group="FIFO" default="7" min="0" max="63" resolution="1" visible="`${micUsed || pdmUsed}`" editable="true" desc="The programmable FIFO empty threshold" />
    <ParamBool id="fifoTrigger" name="Trigger Output" group="FIFO" default="false" visible="`${micUsed || pdmUsed}`" editable="true" desc="Trigger out on valid FIFO data" />
    
    <ParamBool id="timerTrigger" name="Trigger Output" group="Timer" default="false" visible="true" editable="true" desc="Trigger out on Timer terminal count" />
    <ParamRange id="period" name="Period" group="Timer" default="2400" min="0" max="65535" resolution="1" visible="true" editable="true" desc="The timer period" />
    <ParamChoice id="tmin" name="Input" group="Timer" default="CY_ADCMIC_TIMER_COUNT_INPUT_CIC_UPDATE" visible="true" editable="true" desc="The timer input signal" >
      <Entry name="CIC" value="CY_ADCMIC_TIMER_COUNT_INPUT_CIC_UPDATE" visible="true" />
      <Entry name="SysClk" value="CY_ADCMIC_TIMER_COUNT_INPUT_CLK_SYS" visible="true" />
    </ParamChoice>
    
    <Repeat count="28">
      <ParamSignal name="GPIO$idx" port="gpio_adc_in[$idx]" group="Connections" visible="`${dcUsed &amp;&amp; gpio$idxok}`" canBeEmpty="`${!(dcUsed &amp;&amp; gpio$idxok) || (dcIn ne CY_ADCMIC_GPIO$idx)}`" desc="GPIO$idx input for DC measurement" />
    </Repeat>

    <ParamSignal name="PDM Clock" port="clk_pdm[0]" group="Connections" visible="`${pdmUsed}`" canBeEmpty="`${!pdmUsed}`" desc="PDM clock output" >
      <Constraint type="ACCEPT" targetLocation="ioss\[\d+\]\.port\[\d+\]\.pin.*" valid="true" >
