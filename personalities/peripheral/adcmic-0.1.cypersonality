        </Parameter>
      </Constraint>
    </ParamSignal>
    
    <ParamSignal name="DC Trigger" port="tr_adcmic_dc[0]" group="Connections" visible="`${dcUsed &amp;&amp; timerTrigger}`" canBeEmpty="true" desc="Trigger output for DC measurement" />
    <ParamSignal name="DATA Trigger" port="tr_adcmic_data[0]" group="Connections" visible="`${(micUsed || pdmUsed) &amp;&amp; fifoTrigger}`" canBeEmpty="true" desc="Trigger output for MIC or PDM audio streaming" />
    
    <ParamBool id="inFlash" name="Store Config in Flash" group="Advanced" default="true" visible="true" editable="true" desc="Controls whether the configuration structure is stored in flash (const, true) or SRAM (not const, false)." />
