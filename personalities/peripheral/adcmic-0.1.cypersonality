    <ParamBool id="micBiasLz" name="MIC bias Low Impedance" group="Analog Microphone Path" default="false" visible="`${micUsed}`" editable="true" desc="Microphone bias output low impedance during power down mode: checked - low impedance, unchecked - high impedance" />
    
    <ParamChoice id="pgaGain" name="PGA Gain" group="Analog Microphone Path" default="CY_ADCMIC_PGA_GAIN_0" visible="`${micUsed}`" editable="true" desc="Select the PGA gain" >
      <Entry name="$idx db" value="CY_ADCMIC_PGA_GAIN_$idx" visible="true" repeatCount="43" />
    </ParamChoice>
    
    <ParamChoice id="pgaInCm" name="PGA Input Common Mode" group="Analog Microphone Path" default="CY_ADCMIC_INCM_0_4" visible="`${micUsed}`" editable="true" desc="Select the PGA input common mode voltage" >
      <Entry name="0.4 x aVdd" value="CY_ADCMIC_INCM_0_4" visible="true" />
