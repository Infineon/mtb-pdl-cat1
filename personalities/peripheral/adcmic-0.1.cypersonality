      <Entry name="0.35 x aVdd" value="CY_ADCMIC_INCM_0_35" visible="true" />
    </ParamChoice>
    
    <ParamChoice id="pgaOutCm" name="PGA Output Common Mode" group="Analog Microphone Path" default="CY_ADCMIC_OUTCM_0_6" visible="`${micUsed}`" editable="true" desc="Select the PGA output common mode voltage" >
      <Entry name="0.6" value="CY_ADCMIC_OUTCM_0_6" visible="true" />
      <Entry name="0.7" value="CY_ADCMIC_OUTCM_0_7" visible="true" />
