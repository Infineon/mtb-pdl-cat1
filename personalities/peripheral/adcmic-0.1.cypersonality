        </Parameter>
      </Constraint>
    </ParamSignal>
    <ParamSignal name="PDM Data" port="pdm_data[0]" group="Connections" visible="`${pdmUsed}`" canBeEmpty="`${!pdmUsed}`" desc="PDM data input" >
      <Constraint type="ACCEPT" targetLocation="ioss\[\d+\]\.port\[\d+\]\.pin.*" valid="true" >
        <Parameter id="DriveModes" severity="ERROR" reason="">
