    <ParamBool id="dcCfg" name="Enable Configuration" group="DC Measurement Path" default="false" visible="`${source ne CY_ADCMIC_DC}`" editable="true" desc="DC measurement path cofiguration enable for application usage" />
    <ParamBool id="micCfg" name="Enable Configuration" group="Analog Microphone Path" default="false" visible="`${source ne CY_ADCMIC_MIC}`" editable="true" desc="Analog microphone path cofiguration enable for application usage" />
    <ParamBool id="pdmCfg" name="Enable Configuration" group="PDM Microphone Path" default="false" visible="`${source ne CY_ADCMIC_PDM}`" editable="true" desc="PDM microphone path cofiguration enable for application usage" />
    
    <ParamBool id="dcUsed" name="dcUsed" group="DC Measurement Path" default="`${(source eq CY_ADCMIC_DC) || dcCfg}`" visible="`${debug}`" editable="false" desc="" />
